# SenialSOLID Application Environment Configuration
# Copy this file to .env and modify the values as needed
# DO NOT commit the actual .env file to version control

# Flask Configuration
FLASK_APP=01_presentacion.webapp.views
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-here-generate-a-secure-random-string
# SECURITY CRITICAL: Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# NEVER use "Victor" or other predictable values - MINIMUM 32 characters

# Database Configuration
DATABASE_URL=sqlite:///data.sqlite
SQLALCHEMY_DATABASE_URI=sqlite:///data.sqlite
SQLALCHEMY_TRACK_MODIFICATIONS=false

# Application Configuration
APP_NAME=SenialSOLIDApp
APP_VERSION=2.0.0

# Data Directories (relative to project root)
DATA_DIR=./data
ACQUISITION_DATA_DIR=./data/adq
PROCESSING_DATA_DIR=./data/pro

# New Flexible Configuration System Variables
# ===========================================
ENVIRONMENT=development
BASE_DATA_DIR=datos
INPUT_SUBDIR=entrada
ACQ_SUBDIR=adq
PROC_SUBDIR=pro

# Signal Configuration
ACQUISITION_TYPE=senoidal
ACQ_SIGNAL_TYPE=pila
ACQ_SIGNAL_SIZE=20

PROCESSING_TYPE=umbral
PROCESSING_THRESHOLD=5
PROC_SIGNAL_TYPE=pila
PROC_SIGNAL_SIZE=20

STORAGE_CONTEXT=archivo

# Production-specific overrides
PROD_DATA_DIR=/var/lib/senial/data
PROD_THRESHOLD=5
PROD_SIGNAL_SIZE=20
MAX_PROCESSES=4

# Legacy Signal Processing Configuration (deprecated)
SIGNAL_ACQUISITION_TYPE=senoidal
SIGNAL_PROCESSING_TYPE=umbral
SIGNAL_SIZE=20

# Input/Output Configuration
INPUT_FILE=datos.txt
OUTPUT_FORMAT=dat

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=application.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Development Configuration
DEBUG_MODE=true
TESTING=false

# Security Configuration
CSRF_ENABLED=true
WTF_CSRF_ENABLED=true

# Performance Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB

# External Services (if needed)
# API_BASE_URL=https://api.example.com
# API_KEY=your-api-key-here

# Production Override Examples (commented out)
# For production, set these environment variables:
# FLASK_ENV=production
# FLASK_DEBUG=false
# SECRET_KEY=a-very-secure-production-secret-key
# DATABASE_URL=postgresql://user:pass@host:5432/dbname
# LOG_LEVEL=WARNING